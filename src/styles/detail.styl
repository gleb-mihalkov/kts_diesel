/// -------------------------
/// Детальная карточка.
/// -------------------------
.catalog-detail
  border 1px solid #f2f2f2
  border-top none
  &__brend
    margin 0 158px 0 0
.catalog-detail__block:after
  content ""
  visibility hidden
  display block
  height 0
  clear both
.catalog-slider
  width 531px
  height 394px
  border-right 1px solid #f2f2f2
  text-align center
  float left
  &__title
    color #1b2026
    font-size 16px
    font-weight 400
    padding 27px 0 0 0
  &__img
    padding 20px 10px
    height 305px
    background-position center center !important
    background-repeat no-repeat !important
.catalog-detail__info
  height 394px
  float left
  padding 31px
  & .page__line
    margin 30px auto 27px
    width 100%
  &-top > *
    display inline-block
    vertical-align bottom
  &-title
    font-size 16px
    font-weight 400
  &-price
    font-size 32px
    font-weight 700
    font-family 'Ubuntu', sans-serif
    margin 10px 0 0 0
  &-count
    width 105px
    height 31px
    border 1px solid #f2f2f2
    border-radius 4px
    font-size 0
    margin 0 24px 0 123px
    & .minus
      border-top-left-radius 4px
      border-bottom-left-radius 4px
      &:before
        content '-'
        position absolute
        left 0
        right 0
        top 0
        bottom 0
        line-height 29px
        text-align center
        font-size 16px
        font-weight 700
        color white
    & .plus
      border-top-right-radius 4px
      border-bottom-right-radius 4px
      &:before
        content '+'
        position absolute
        left 0
        right 0
        top 0
        bottom 0
        line-height 29px
        text-align center
        font-size 16px
        font-weight 700
        color white
    & .plus, .minus
      background #bdc2c7
      width 28px
      display inline-block
      height 100%
      transition trs_normal
      cursor pointer
      vertical-align top
      position relative
    & .plus:hover, .minus:hover
      background #3f4c5c
      transition trs_normal
      vertical-align top
    & .count
      width 47px
      display inline-block
      text-align center
      font-size 16px
      color #333
      line-height 31px
  &__presence
    font-size 14px
    color #1b2026
    line-height 17px
    & span
      font-weight 700
.catalog-detail__all-price
  font-size 14px
  font-weight 400
  color #1b2026
  min-height 138px
  & span
    font-weight 700
.catalog-detail__price
  line-height 17px
  &--marg
    margin 0 0 14px 0
  & .descr
    color #7e8792
.catalog-detail__buy > *
  display inline-block
  vertical-align top
.catalog-detail__rozn
  color #1b2026
  line-height 40px
  font-size 16px
  & span
    font-size 32px
    font-weight 700
.catalog-detail__group-button
  margin 0 0 0 112px
  text-align center
.buy_one_click
  font-weight 700
  text-transform uppercase
  color #1b2026
  font-size 16px
  transition trs_normal
  margin 18px 0 0 0
  cursor pointer
  &:hover
    color #d31020
    transition trs_normal
.catalog-detail__tabs
  width 100%
  margin 30px 0 0 0
  border 1px solid #f2f2f2
.lazy_load
  text-align center
.delivery
  display flex
  flex-direction row
  flex-wrap nowrap
  justify-content space-between
  align-content stretch
  align-items flex-start
  &__item
    float left
    width 50%
    &:first-child
      padding 0 10px 0 0
    &:last-child
      padding 0 0 0 32px
  &__title
    font-size 16px
    font-weight 700
    color #1b2026
    margin 0 0 25px 0
  &__text
    font-size 16px
    font-weight 400
    line-height 24px
    color #1b2026
    margin 0 0 51px 0
.pay
  display flex
  flex-direction row
  flex-wrap nowrap
  justify-content space-between
  align-content stretch
  align-items flex-start
  &__item
    order 0
    flex 0 1 auto
    align-self auto
    font-size 16px
    line-height 24px
  &__title
    font-size 16px
    font-weight 700
    color #1b2026
    margin 0 0 25px 0
    &--marg
      margin 0
  & ul
    margin 0px 0 22px 0
  &--flex-center
    align-content center