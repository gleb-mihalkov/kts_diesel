/// Детальная карточка.
/// -------------------------
.catalog-detail__block:after
  content ""
  visibility hidden
  display block
  height 0
  clear both
.catalog-slider
  width 531px
  height 394px
  border-right 1px solid #f2f2f2
  border-bottom 1px solid #f2f2f2
  text-align center
  float left
  &__title
    color #1b2026
    font-size 16px
    font-weight 400
    padding 27px 0 0 0
  &__img
    padding 20px 10px
    height 305px
    background-position center center !important
    background-repeat no-repeat !important
.catalog-detail__info
  border-right 1px solid #f2f2f2
  border-bottom 1px solid #f2f2f2
  height 394px
  float left
  padding 31px
  &-title
    font-size 16px
    font-weight 400
  &-price
    font-size 32px
    font-weight 700
    font-family 'Ubuntu', sans-serif
    margin 10px 0 0 0
.catalog-detail__tabs
  width 100%