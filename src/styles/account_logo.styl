/// ---------------------------
/// Иконка аккаунта с подписью.
/// ---------------------------

.account-logo
  display flex
  align-items center
  
  &__image
    background-position center center
    background-repeat no-repeat
    background-size contain
    border-radius 50%
    display block
    width 50px
    height 50px
    
    &--empty
      background-image img('icon_avatar.png')
    
    &:first-child
      margin-right 20px
    
    &:last-child
      margin-left 20px
      
  &__inner
    flex 1 0 50%
  
  &__title
  &__text
    display block
    width 100%
    line-height 22px
    
  &__title
    font-weight bold
    font-size 16px
    
    a
      link black red
    
  &__text
    font-size 14px
    color dimgray