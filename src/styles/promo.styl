/// ----------------------
/// Промо-блок.
/// ----------------------

.promo
  position relative
  display block
  
  &__aside
    position absolute
    bottom 0
    right 0
    
  &__main
    font-size 16px
    line-height 1.38
    
    ul
      margin 40px 0 52px
      padding 0
      list-style none
    
    li
      position relative
      display block
      padding 3px 0 3px 65px
      margin 23px 0
      
      &:before
        background no-repeat center center img('icon_list_check.png')
        position absolute
        top 0
        left 0
        display block
        width 36px
        height 28px
        content ''
        
    small
      display inline-block
      padding-left 65px
      color dimgray