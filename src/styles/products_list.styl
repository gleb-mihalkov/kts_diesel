.products-list
  border-top border_lightgray
  display border-left
  
  &__header
    display flex
    justify-content space-between
    align-items center
    padding 30px 0
    
  &__param
    display flex
    align-items center
    
    & > *
      margin-left 20px
      
      &:first-child
        margin-left 0