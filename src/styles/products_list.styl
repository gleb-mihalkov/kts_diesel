/// ----------------------
/// Список продуктов.
/// ----------------------

.products-list
  
  &__header
  &__content
  &__bottom
    margin 30px 0
  
  &__header
    display flex
    justify-content space-between
    align-items center
    
  &__param
    display flex
    align-items center
    
    & > *
      margin-left 20px
      
      &:first-child
        margin-left 0
  
  &__item
    margin 10px 0
    
  &__scroll
    display none
    
  &__bottom
    display flex
    align-items center
    
  &__pagination
    margin-left auto