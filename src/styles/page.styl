/// -------------------------
/// Стили статической страницы и меню.
/// -------------------------
.page
  display flex
  align-items start
  align-content flex-start
  flex-wrap wrap
  min-height 100%

  &__header
  &__aside
  &__main

    &--plain
      border none
      padding 0 !important

  &__header
    border 1px solid darkwhite
    flex 1 0 100%
    padding 30px 31px 26px

    & ~ ^[0]__aside
    & ~ ^[0]__main
      border-top none

    & + ^[0]__aside
      border-right none

  &__aside
    border 1px solid darkwhite
    flex 0 0 auto

    &:last-child
      border-left none

  &__main
    border 1px solid darkwhite
    flex 50%
    padding 30px

    & ^[0]__line
      margin-right -30px
      margin-left -30px

  &__line
    border-top 1px solid darkwhite
    height 1px
    margin 30px 0