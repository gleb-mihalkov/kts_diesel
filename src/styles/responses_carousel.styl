/// ----------------------
/// Карусель отзывов.
/// ----------------------

.responses-carousel
  
  &__header
    display flex
    align-items center
  
  &__heading
    display block
    width 341px
    margin 0
    font-weight bold
    font-size 24px
    line-height 36px
    
    a
      link black red
        
  &__dots
    display flex
    align-items center
    
  &__dot
    transition trs_normal
    border 3px solid lightgray
    border-radius 50%
    background transparent
    display block
    width 15px
    height 15px
    margin-left 15px
    
    &:first-child
      margin-left 0
      
    &.active
    &:hover
      background lightgray
      
    &.active
      cursor default
      
  &__content
    position relative
    height 110px
    margin 29.5px 0
      
  &__item
    transition trs_normal
    position absolute
    top 0
    left 0
    visibility hidden
    opacity 0
    width 100%
    height 100%
    
    &.active
      visibility visible
      opacity 1