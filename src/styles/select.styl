.select
  position relative
  display inline-block
  
  &--wide
    display block
    width 100%
    
  &__text
    element()
    border 1px solid #bdc2c7
    position relative
    display block
    width 100%
    user-select none
    cursor pointer
    
    &:after
      transition trs_normal
      transform rotate(0deg)
      background no-repeat center center img('icon_chevron_white.png')
      position absolute
      z-index 10
      top 23px
      right 21px
      display block
      width 10px
      height 6px
      content ''
  
  input[value=''] + &__text
    color dimgray
    
    &:before
      content attr(data-placeholder)
    
  &__options
    transition trs_normal
    opacity 0
    visibility hidden
    position absolute
    display block