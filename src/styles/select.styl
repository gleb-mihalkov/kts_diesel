/// -------------------------
/// Селект.
/// -------------------------
.select
  position relative
  display inline-block
  
  &--wide
    display block
    width 100%
    
  &__text
    element()
    border 1px solid #bdc2c7
    position relative
    display block
    width 100%
    user-select none
    cursor pointer
    
    &:after
      transition trs_normal
      transform rotate(0deg)
      background no-repeat center center img('icon_chevron_white.png')
      position absolute
      z-index 10
      top 23px
      right 21px
      display block
      width 10px
      height 6px
      content ''
      
      ~/.active &
        transform rotate(-180deg)
  
    /input[value=''] + &
      color dimgray
    
      &:before
        content attr(data-placeholder)
      
    ~/.active &
      box-shadow shadow
      border-bottom-right-radius 0
      border-bottom-left-radius 0
    
  &__options
    border-bottom-right-radius 4px
    border-bottom-left-radius 4px
    box-shadow shadow
    border 1px solid #bdc2c7
    border-top none
    background white
    transition trs_normal
    opacity 0
    list-style none
    visibility hidden
    position absolute
    z-index 100
    display block
    width 100%
    margin 0
    padding-left 0
    
    & > li
      border-top 1px solid #bdc2c7
      display block
      padding 0 20px
      font-size 14px
      line-height 40px
      cursor pointer
      overflow hidden
      
      &:first-child
        border-top none
        
      &[data-value='']
        color dimgray
        
    &:before
      height = 14px
      background white
      position absolute
      top (-(height + 1px))
      left 0
      display block
      width 100%
      height height
      content ''
    
    ~/.active ^[0]__options
      visibility visible
      opacity 1
    
  &--number
    font-weight bold
    
    & ^[0]__text
      border-color fadegray
      min-width 93px
      padding-right 44px
      padding-left 0
      text-align center
      font-size 14px
      
      &:before
        background fadegray
        position absolute
        top 50%
        right 44px
        display block
        width 1px
        height 16px
        margin-top -8px
        content ''
    
    & ^[0]__options
      border-color fadegray
      
      & > li
        border-top-color fadegray
        color dimgray
      
