/// ----------------------
/// Разметка формы.
/// ----------------------

.form
  display block
  width 100%
  
  &__row
    margin 16px 0
       
    &--offset-large
      margin 37.50px 0
  
    &--columns-3
      display flex
      flex-direction row
      flex-wrap wrap
      margin -10px
      
      & > ^[0]__item
        width (100% / 3)
        padding 10px