/// ----------------------------
/// Окошко информации о корзине.
/// ----------------------------

.basket-info
  position relative
  display block
  
  &__icon
    background no-repeat center center img('icon_basket.png')
    position relative
    z-index 200
    display block
    width button_height
    height button_height
    
    &[data-count='0']:before
      display none
    
    &:before
      background-color red
      border-radius 50%
      position absolute
      top 3px
      right 0px
      display block
      width 20px
      height 20px
      text-align center
      font-weight bold
      font-size 12px
      line-height 20px
      color white
      content attr(data-count)
  
  &__dropdown
    transition trs_normal
    background white
    box-shadow shadow
    border-radius 4px
    position absolute
    z-index 100
    right -15px
    top -13px
    display block
    width 335px
    visibility hidden
    opacity 0
    
  &__heading
    border-bottom 1px solid #f2f2f2
    display block
    width 100%
    height 77px
    padding 30.5px 20px
    text-transform uppercase
    font-weight bold
    font-size 16px
    color black

  &__content
    display block
    width 100%
    padding 20px
    
  &__bottom
    border-top 1px solid #f2f2f2
    display block
    padding 20px
    
  &.active &__dropdown
  &:hover &__dropdown
    visibility visible
    opacity 1