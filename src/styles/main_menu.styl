/// ----------------------
/// Главное меню сайта.
/// ----------------------

.main-menu
  position relative
  display block
  padding 0
  
  &, ul
    list-style none
    margin 0
  
  &__title
    background red img('icon_menu_white.png') no-repeat 20px center
    display block
    padding-left 44px
  
  &__sub
    transition trs_normal
    visibility hidden
    opacity 0
    background-color white
    border-radius 4px
    box-shadow shadow
    position absolute
    z-index 200
    top 51px
    left 0
    display flex
    flex-direction column
    justify-content flex-start
    align-content stretch
    flex-wrap wrap
    width 1000px
    height 243px
    padding 0 20px
    font-weight bold
    font-size 16px
    
    &:before
    &:after
      background-color white
      position absolute
      display block
      left 0
      width 140.5px
      content ''
    
    &:before
      box-shadow shadow
      border-top-right-radius 4px
      border-top-left-radius 4px
      z-index 100
      top -52px
      height button_height + 1px
      
    &:after
      z-index 300
      top 0
      left 0
      height 15px
    
    li
      margin-top 20px !important
      
    a
      link black red
  
  &:hover &__sub
  &.active &__sub
    visibility visible
    opacity 1
