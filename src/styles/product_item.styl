/// -----------------------
/// Элемент списка товаров.
/// -----------------------

.product-item
  transition trs_normal
  border 1px solid fadegray
  border-radius 4px
  display flex
  align-items center
  width 100%
  height 78px
  
  &:hover
    border-color fadered
  
  &__image
    border-right 1px solid fadegray
    background-position center center
    background-repeat no-repeat
    background-size cover
    background-origin content-box
    display block
    width 85px
    height 78px
    padding 5px
    font-size 0
    
    &--empty
      background-image img('pic_no_image.png')
      background-size auto auto
    
  &__text
    padding-left 19px
        
  &__price
    margin-left auto
    padding-right 19px
    text-align right
    
  &__button
    transition trs_normal
    background white no-repeat center center img('icon_cart_add.png')
    border-top-right-radius 4px
    border-bottom-right-radius 4px
    border none
    border-left 1px solid fadegray
    display block
    width 74px
    height 76px
    
    &:hover
      background-image img('icon_cart_add_red.png')
        
  &.active
    
    & ^[0]__button
      background-image img('icon_cart_added.png') !important
      cursor default