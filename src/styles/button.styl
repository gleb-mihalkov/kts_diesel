/// -------------
/// Стили кнопки.
/// -------------

.button
  display inline-block
  border none
  
  &--dark
    transition trs_normal
    background-color transparent
    border-radius 4px
    padding 8px 15px
    font-weight bold
    font-size 14px
    color white
    
    &:hover
      background-color #54606e
      
    &^[0]--email
      border 1px solid #bdc2c7
      padding-bottom 7.5px
      padding-top 7.5px
      font-weight normal
      font-size 12px
      color #bdc2c7
      
      &:hover
        background-color transparent
        border-color white
        color white
    