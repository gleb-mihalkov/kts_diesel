/// -------------
/// Стили кнопки.
/// -------------

.button
  display inline-block
  border none
  
  &--dark
    transition trs_normal
    background-color transparent
    border-radius 4px
    padding 8px 15px
    font-weight bold
    font-size 14px
    color white
    
    &:hover
      background-color #54606e
      
    &^[0]--email
      border 1px solid #bdc2c7
      padding 7.5px 11px
      font-weight normal
      font-size 12px
      color #bdc2c7
      
      &:before
        background-image img('icon_email.png')
        background-position center center
        background-repeat no-repeat
        position relative
        top -1px
        display inline-block
        vertical-align middle
        width 13px
        height 10px
        margin-right 5px
        content ''
      
      &:hover
        background-color transparent
        border-color white
        color white
    