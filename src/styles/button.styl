/// -------------
/// Стили кнопки.
/// -------------

.button
  display inline-block
  border none
  
  &--primary
    element()
    background-color red
    text-transform uppercase
    font-weight bold
    color white
    
    &[disabled]
      background-color #dde0e3
    
  &--wide
    display block
    width 100%
    text-align center
    
  &--plain
    link inherit, red
    background none
  
  &--plain
    background none
  
  &--dark
    transition trs_normal
    background-color transparent
    border-radius 4px
    padding 8px 15px
    font-weight bold
    font-size 14px
    color white
    
    &:hover
      background-color #54606e
      
    &^[0]--email
      border 1px solid lightgray
      padding 7.5px 11px
      font-weight normal
      font-size 12px
      color lightgray
      
      &:before
        background-image img('icon_email.png')
        background-position center center
        background-repeat no-repeat
        position relative
        top -1px
        display inline-block
        vertical-align middle
        width 13px
        height 10px
        margin-right 5px
        content ''
      
      &:hover
        background-color transparent
        border-color white
        color white
  
  &--grad
    position relative
    
    &:before
      background repeat-x center top img('bg_grad.png')
      position absolute
      top 0
      left 0
      display block
      width 100%
      height 100%
      content ''