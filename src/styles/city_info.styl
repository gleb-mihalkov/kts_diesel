/// ---------------------------------
/// Блок отображения текущего города.
/// ---------------------------------

.city-info
  display block
  font-size 0
  
  &__content
  &__picker
    display inline-block
    vertical-align middle
  
  &__picker
    position relative
    padding-right 20px
    font-weight bold
    font-size 14px
    color white
    
    span
      border-bottom 2px dashed white
      display inline-block
      padding-bottom 2px
    
    &:after
      background-image img('icon_chevron.png')
      background-position center center
      background-repeat no-repeat
      position absolute
      right 0
      top 50%
      display block
      width 10px
      height 6px
      margin-top -3px
      content ''
      
  &__content
    padding-left 20px
    font-size 12px
    color #bdc2c7
    
  &__link
    transition trs_normal
    color inherit
       
    &:hover
      color white
    
  &__divider
    margin-right 6px
    margin-left 6px
    color #54606e
