/// -------------------------
/// Страница контактов.
/// -------------------------
.contact-block
  padding 0

  &:after
    content ''
    display block
    clear both

  &__list
    padding 29px 50px 0 30px
    width 371px

    &-item
      margin 0 0 22px 0

    &--left
      float left

  &__text, & a
    color #1b2026
    font-size 16px
    line-height 22px
    font-weight 400

    &--grey
      color dimgray

  &__title
    text-transform uppercase
    margin 0 0 3px 0

  &__small
    color dimgray
    font-size 14px
    font-weight 400
    line-height 22px
    margin 9px 0 0 0
  & .box .map
    width 691px
    height 572px
.contact-slider
  height 277px
  border-top 1px solid #f2f2f2
  background-color #fafafa
  padding 31px